# Application Configuration
NODE_ENV=development                 # Environment (development/staging/production)
APP_NAME=NestJS API                 # Application name
APP_DESCRIPTION=NestJS API Template # Application description
PORT=3000                           # Server port number
CORS_ORIGIN=*                       # Comma-separated list of allowed origins

# Database Configuration
DATABASE_URL=                       # PostgreSQL connection URL

# Authentication Configuration
PASSWORD_SALT_ROUNDS=10             # Number of bcrypt salt rounds

# JWT Configuration
JWT_SECRET=                         # Secret key for JWT access tokens
JWT_EXPIRES_IN=1h                   # Access token expiration time
JWT_REFRESH_SECRET=                 # Secret key for JWT refresh tokens
JWT_REFRESH_EXPIRES_IN=7d           # Refresh token expiration time

# SMTP Configuration
SMTP_HOST=                          # SMTP server host
SMTP_PORT=587                       # SMTP server port
SMTP_IS_IGNORE_TLS=false           # Ignore TLS verification
SMTP_IS_SECURE=false               # Use secure connection
SMTP_USERNAME=                      # SMTP username/email
SMTP_PASSWORD=                      # SMTP password
SMTP_SENDER_MAIL=                   # Default sender email address

# ImageKit Configuration
IMAGEKIT_PUBLIC_KEY=                # ImageKit public key
IMAGEKIT_PRIVATE_KEY=               # ImageKit private key
IMAGEKIT_URL_ENDPOINT=              # ImageKit URL endpoint